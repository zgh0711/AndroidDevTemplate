<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="TitleView">
        <attr name="leftIbtn" format="reference"/>
        <attr name="tabLayout" format="reference"/>
        <attr name="rightIbtn" format="reference"/>
        <attr name="rightSecondIbtn" format="reference"/>
        <attr name="centerIbtn" format="reference"/>
        <attr name="leftTv" format="string"/>
        <attr name="leftTv1" format="string"/>
        <attr name="centerTv" format="string"/>
        <attr name="rightTv" format="string"/>
        <attr name="rightTv1" format="string"/>
    </declare-styleable>

    <!--可调节图片大小的单选按钮-->
    <declare-styleable name="BMRadioButton">
        <attr name="BMdrawableSize" format="dimension" />
        <attr name="BMdrawableWidth" format="dimension" />
        <attr name="BMdrawableHeight" format="dimension" />
        <attr name="BMdrawableTop" format="reference" />
        <attr name="BMdrawableBottom" format="reference" />
        <attr name="BMdrawableRight" format="reference" />
        <attr name="BMdrawableLeft" format="reference" />
    </declare-styleable>

    <!--广告条控件属性-->
    <declare-styleable name="NoticeTextView">
        <attr name="noticeTextColor" format="reference|color" />
        <attr name="noticeTextSize" format="dimension" />
        <attr name="noticeRollingTime" format="integer" />
    </declare-styleable>

    <!--带圆角的 ImageView-->
    <declare-styleable name="RoundImageView">
        <attr name="radius" format="dimension" />
        <attr name="leftUpRadius" format="dimension" />
        <attr name="rightUpRadius" format="dimension" />
        <attr name="leftDownRadius" format="dimension" />
        <attr name="rightDownRadius" format="dimension" />
    </declare-styleable>

    <declare-styleable name="EasyPickerView">
        <attr name="epvTextSize" format="dimension"/>
        <attr name="epvTextColor" format="color"/>
        <attr name="epvTextPadding" format="dimension"/>
        <attr name="epvTextMaxScale" format="float"/>
        <attr name="epvTextMinAlpha" format="float"/>
        <attr name="epvRecycleMode" format="boolean"/>
        <attr name="epvMaxShowNum" format="integer"/>
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <attr name="leftMenuView" format="reference" />
        <attr name="rightMenuView" format="reference" />
        <attr name="contentView" format="reference" />
        <attr name="canRightSwipe" format="boolean" />
        <attr name="canLeftSwipe" format="boolean" />
        <attr name="fraction" format="float" />
    </declare-styleable>
</resources>